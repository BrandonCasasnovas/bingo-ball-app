<%- include('header') -%> 

<div class="text-center center-div" id="login">
    <div class="container w-25 border py-5">
        <div class="title pb-5">
            <h2 class="font-weight-bold">Login System</h2>
            <span>Log in for the existing user</span>
        </div>
        <form action="#" class="pt-3">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="e-mail" name="email">
                <small class="form-text text-muted float-start">Register email address</small>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="password">
            </div>
            <button type="button" class="btn btn-success mt-3 rounded-pill">Submit</button>
        </form>
    </div>
</div>




<%- include('footer') -%> 